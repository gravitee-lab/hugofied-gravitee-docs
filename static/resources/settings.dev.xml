      <passphrase>${YOUR_GPG_PASSPHRASE} (optional)</passphrase>
    </server>
  </servers>
  <profiles>
    <profile>
      <id>gio-dev</id>
        <properties>
          <altDeploymentRepository>artifactory-gravitee-snapshots::default::http://odbxikk7vo-artifactory.services.clever-cloud.com/gravitee-snapshots/</altDeploymentRepository>
        </properties>
        <activation>
            <property>
                <name>performRelease</name>
