<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
  <pluginGroups></pluginGroups>
  <proxies></proxies>
  <mirrors>
    <mirror>
      <!-- The maven referential for all Pull Requests / SNAPSHOTS versions CICD Process -->
      <id>artifactory-gravitee-maven-mirror</id>
      <mirrorOf>external:*</mirrorOf>
      <url>http://odbxikk7vo-artifactory.services.clever-cloud.com/external-dependencies-n-gravitee-all/</url>
    </mirror>
  </mirrors>
  <servers>
    <server>
      <id>artifactory-gravitee-maven-mirror</id>
      <username>${GRAVITEEBOT_ARTIFACTORY_USERNAME}</username>
      <password>${GRAVITEEBOT_ARTIFACTORY_PASSWORD}</password>
    </server>
    <server>
      <id>artifactory-plugin-repository-remote-nexus</id>
      <username>${GRAVITEEBOT_ARTIFACTORY_USERNAME}</username>
      <password>${GRAVITEEBOT_ARTIFACTORY_PASSWORD}</password>
    </server>
    <server>
      <id>artifactory-repository-remote-nexus</id>
      <username>${GRAVITEEBOT_ARTIFACTORY_USERNAME}</username>
      <password>${GRAVITEEBOT_ARTIFACTORY_PASSWORD}</password>
    </server>
    <server>
      <id>artifactory-gravitee-snapshots</id>
      <username>${GRAVITEEBOT_ARTIFACTORY_USERNAME}</username>
      <password>${GRAVITEEBOT_ARTIFACTORY_PASSWORD}</password>
    </server>
    <server>
      <id>artifactory-gravitee-releases</id>
      <username>${GRAVITEEBOT_ARTIFACTORY_USERNAME}</username>
      <password>${GRAVITEEBOT_ARTIFACTORY_PASSWORD}</password>
    </server>
    <server>
      <id>artifactory-repository-remote-nexus-cache</id>
      <username>${GRAVITEEBOT_ARTIFACTORY_USERNAME}</username>
      <password>${GRAVITEEBOT_ARTIFACTORY_PASSWORD}</password>
    </server>
    <server>
      <id>sonatype-nexus-snapshots</id>
      <username>${GRAVITEEBOT_NEXUS_SNAPSHOTS_USERNAME}</username>
      <password>${GRAVITEEBOT_NEXUS_SNAPSHOTS_PASSWORD}</password>
    </server>
    <server>
      <!-- as of https://maven.apache.org/plugins/maven-gpg-plugin/usage.html -->
      <id>gpg.passphrase</id>
      <passphrase>${GRAVITEEBOT_GPG_PASSPHRASE}</passphrase>
    </server>

  </servers>

  <!-- <activeProfiles>
  <activeProfile>gio-dev</activeProfile>
  </activeProfiles> -->
</settings>

